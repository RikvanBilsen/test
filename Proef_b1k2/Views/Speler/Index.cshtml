@model IEnumerable<Proef_b1k2.Models.Speler>

@{
    ViewBag.Title = "Index";
}

<h2>Spelers</h2>

<p>
    @Html.ActionLink("Speler Toevoegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Roepnaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tussenvoegsels)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Achternaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SchoolID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Roepnaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tussenvoegsels)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Achternaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SchoolID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.SpelerID }) |
            @Html.ActionLink("Details", "Details", new { id = item.SpelerID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SpelerID })
        </td>
    </tr>
}

</table>
